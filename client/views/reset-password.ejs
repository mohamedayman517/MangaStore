<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/meta") %>
    <title>Manga Store - Forgot Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/build.min.css" />
  </head>
  <body class="bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark min-h-screen">
    <div class="min-h-screen flex flex-col">
      <%- include("./partials/header") %>

      <!-- Main content -->
      <main class="flex-grow flex items-center justify-center px-4">
        <div class="w-full max-w-md space-y-8">
          <!-- Icon -->
          <div class="text-center">
            <div
              class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary-light/10 dark:bg-primary-dark/10">
              <i class="fas fa-fingerprint text-3xl text-primary-light dark:text-primary-dark"></i>
            </div>
          </div>

          <!-- Heading and description -->
          <div class="text-center">
            <h1 class="text-2xl font-bold text-text-light dark:text-text-dark">Forgot password?</h1>
            <p class="mt-2 text-gray-600 dark:text-gray-400">No worries, we'll send you reset instructions.</p>
          </div>

          <!-- Form -->
          <form id="resetForm" class="mt-8 space-y-6">
            <div>
              <label for="email" class="block text-sm font-medium text-text-light dark:text-text-dark mb-2"
                >Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="Enter your email"
                class="w-full px-3 py-2 border border-secondary-light dark:border-secondary-dark rounded-md focus:outline-none focus:ring-2 focus:ring-primary-light focus:border-primary-light dark:focus:border-primary-dark dark:focus:ring-primary-dark bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark" />
            </div>

            <button
              type="submit"
              class="w-full bg-primary-light dark:bg-primary-dark text-text-light dark:text-text-dark py-2 rounded-md hover:bg-opacity-90 transition-colors duration-200">
              Reset password
            </button>
          </form>

          <!-- Back to login link -->
          <div class="text-center">
            <a href="/login" class="inline-flex items-center text-primary-light dark:text-primary-dark hover:underline">
              <i class="fas fa-arrow-left mr-2"></i>
              Back to log in
            </a>
          </div>
        </div>
      </main>
    </div>
    <%- include("./partials/footer") %>
    <script src="/js/reset-password.js"></script>
  </body>
</html>
