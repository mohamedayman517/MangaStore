<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/meta") %>
    <title>Admin - Reviews</title>
    <link rel="stylesheet" href="/css/build.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
  </head>
  <body class="bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark min-h-screen flex flex-col">
    <%- include("../partials/navbar") %>

    <main class="container mx-auto px-4 py-8 flex-1">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-primary-light dark:text-primary-dark">Order Reviews</h1>
        <a href="/admin" class="text-sm text-blue-600 dark:text-blue-400 hover:underline">Back to dashboard</a>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
        <div class="p-4 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
          <div class="text-sm text-gray-600 dark:text-gray-400">Latest 200 reviews</div>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-900/40">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rating</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Comment</th>
                <th class="px-4 py-3"></th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
              <% if (reviews && reviews.length) { %>
                <% reviews.forEach(r => { %>
                  <tr>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
                      <%= r.createdAt && r.createdAt.toDate ? new Date(r.createdAt.toDate()).toLocaleString('en-US') : '' %>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm font-mono"><%= r.orderId %></td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm"><%= r.uid %></td>
                    <td class="px-4 py-3 whitespace-nowrap">
                      <% const stars = Number(r.rating) || 0; %>
                      <div class="flex items-center gap-1">
                        <% for (let i=1;i<=5;i++){ %>
                          <i class="fa-star <%= i <= stars ? 'fa-solid text-yellow-400' : 'fa-regular text-gray-300' %>"></i>
                        <% } %>
                      </div>
                    </td>
                    <td class="px-4 py-3 max-w-xl text-sm text-gray-700 dark:text-gray-300">
                      <%= (r.comment || '').toString().slice(0, 200) %><%= (r.comment && r.comment.length > 200) ? 'â€¦' : '' %>
                    </td>
                    <td class="px-4 py-3 text-right">
                      <a href="/admin/view/transaction/<%= r.orderId %>" class="text-sm text-blue-600 dark:text-blue-400 hover:underline">View order</a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="px-4 py-6 text-center text-gray-500 dark:text-gray-400">No reviews yet.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </body>
</html>
