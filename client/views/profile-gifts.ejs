<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("./partials/meta") %>
    <title>Your Gifts</title>
    <link rel="stylesheet" href="/css/framework.css" />
    <link rel="stylesheet" href="/css/build.min.css" />
    <link rel="stylesheet" href="/css/profile.css" />
  </head>
  <body class="bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark">
    <%- include("./partials/header") %>
    <%- include("./partials/alerts-popups") %>
    <%- include("./partials/loader") %>

    <main class="min-h-screen w-full px-3 pt-20 mb-10">
    <div class="max-w-6xl mx-auto mt-4 p-6 glass dark:bg-background-dark rounded-lg shadow-lg border-2 border-primary-light/20 dark:border-primary-dark/20">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-semibold text-primary-light dark:text-primary-dark">Gifts</h1>
        <a href="/profile" class="px-4 py-2 rounded-lg bg-primary-light text-white dark:bg-primary-dark dark:text-background-dark hover:opacity-90 text-sm">Back to Profile</a>
      </div>

      <section class="mb-10">
        <h2 class="text-xl font-semibold mb-4 text-primary-light dark:text-primary-dark">Gifts You Sent</h2>
        <% if (!sent || sent.length === 0) { %>
          <p class="text-gray-500">You have not sent any gifts yet.</p>
        <% } else { %>
          <div class="overflow-x-auto">
            <table class="min-w-full">
              <thead>
                <tr class="text-left text-sm font-semibold text-text-light dark:text-text-dark">
                  <th class="py-3 px-4">Transaction</th>
                  <th class="py-3 px-4">Recipient</th>
                  <th class="py-3 px-4">Total</th>
                  <th class="py-3 px-4">Date</th>
                  <th class="py-3 px-4">Status</th>
                </tr>
              </thead>
              <tbody>
                <% sent.forEach(t => { const latest = t.status && t.status.length ? t.status[t.status.length-1].state : 'N/A'; %>
                  <tr class="border-b border-secondary-light/20 dark:border-secondary-dark/20">
                    <td class="py-3 px-4">
                      <div class="font-medium"><%= t.id %></div>
                    </td>
                    <td class="py-3 px-4">
                      <% if (t.giftRecipient) { %>
                        <div class="font-medium"><%= t.giftRecipient.name %></div>
                        <% if (t.giftRecipient.email) { %><div class="text-xs text-gray-500"><%= t.giftRecipient.email %></div><% } %>
                        <% if (t.giftRecipient.phone) { %><div class="text-xs text-gray-500"><%= t.giftRecipient.phone %></div><% } %>
                      <% } else { %>
                        <span class="text-gray-400">-</span>
                      <% } %>
                    </td>
                    <td class="py-3 px-4 font-semibold"><%= Number(t.totalPrice).toFixed(2) %> <%= t.currency || '' %></td>
                    <td class="py-3 px-4">
                      <%= (t.createdAt.toDate()).toLocaleString("en-GB", { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit', hour12: true }) %>
                    </td>
                    <td class="py-3 px-4"><%= latest %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </section>

      <section>
        <h2 class="text-xl font-semibold mb-4 text-primary-light dark:text-primary-dark">Gifts You Received</h2>
        <% if (!received || received.length === 0) { %>
          <p class="text-gray-500">You have not received any gifts yet.</p>
        <% } else { %>
          <div class="overflow-x-auto">
            <table class="min-w-full">
              <thead>
                <tr class="text-left text-sm font-semibold text-text-light dark:text-text-dark">
                  <th class="py-3 px-4">Transaction</th>
                  <th class="py-3 px-4">From</th>
                  <th class="py-3 px-4">Total</th>
                  <th class="py-3 px-4">Date</th>
                  <th class="py-3 px-4">Status</th>
                </tr>
              </thead>
              <tbody>
                <% received.forEach(t => { const latest = t.status && t.status.length ? t.status[t.status.length-1].state : 'N/A'; %>
                  <tr class="border-b border-secondary-light/20 dark:border-secondary-dark/20">
                    <td class="py-3 px-4">
                      <div class="font-medium"><%= t.id %></div>
                    </td>
                    <td class="py-3 px-4">
                      <div class="font-medium"><%= t.name %></div>
                      <div class="text-xs text-gray-500">UID: <%= t.uid %></div>
                    </td>
                    <td class="py-3 px-4 font-semibold"><%= Number(t.totalPrice).toFixed(2) %> <%= t.currency || '' %></td>
                    <td class="py-3 px-4">
                      <%= (t.createdAt.toDate()).toLocaleString("en-GB", { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit', hour12: true }) %>
                    </td>
                    <td class="py-3 px-4"><%= latest %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </section>
    </div>
    </main>

    <%- include("./partials/footer") %>
  </body>
</html>
